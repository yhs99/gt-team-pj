<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.mappers.owner.coupon.ownerCouponMapper">

	<select id="selectCouponsByStoreId" resultType="com.team.goott.owner.domain.CouponVO">
		select * from coupon where storeId = #{storeId}
	</select>


    <insert id="createCoupon">
       INSERT INTO coupon (couponName, storeId, start, end, discount, stock)
       VALUES (#{couponName}, #{storeId}, #{start}, #{end}, #{discount}, #{stock})
    </insert>

    <delete id="deleteCoupon">
        DELETE FROM coupon
        WHERE couponId = #{couponId}
    </delete>

</mapper>